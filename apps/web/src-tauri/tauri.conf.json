{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Urban Home School",
  "version": "1.0.0",
  "identifier": "ke.urbanhomeschool.uhs",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Urban Home School",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8000 ws://localhost:8000 https://*.urbanhomeschool.ke wss://*.urbanhomeschool.ke https://fonts.googleapis.com https://fonts.gstatic.com https://models.readyplayer.me; img-src 'self' data: https: blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-inline'; worker-src 'self' blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk1MUZDMkRDRUM1NDEwQ0MKUldUTUVGVHMzTUlmbFlJcCtQSk80bzg4cTBRUml1ZkdIUXJzajJDOGtuSTJqQjFHVjVYTVVBa1QK",
      "endpoints": [
        "https://api.urbanhomeschool.ke/releases/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true
    }
  }
}
